{varType App\Model\Entities\Cart $cart}

<div n:snippet="list" data-naja-snippet-cache="off">
    {if empty($cart->items)}
        košík je prázdný

    {else}
        <table class="table table-hover">

            {foreach $cart->items as $item}
                <tr>
                    <th>Název produktu</th>
                    <th>Počet kusů</th>
                    <th>Velikost</th>
                </tr>
                <tr>
                    <td>{$item->product->title}</td>
                    <td>{$item->count}</td>
                    <td>{$item->size}</td>
                    <td>
                        <a href="{link remove! $item->cartItemId}" class="ajax">odebrat</a>
                    </td>
                </tr>
            {/foreach}

        </table>


    {/if}
</div>